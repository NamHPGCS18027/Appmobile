<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/barUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Update Trip"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="#3F51B5"/>

    <EditText
        android:id="@+id/Name_of_trip3"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/barUpdate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="Name of Trip"
        android:inputType="text"
        android:textColor="#A3000000"
        android:textStyle="bold"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/Destination3"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/Name_of_trip3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="text"
        android:hint="Destination"
        android:textColor="#A3000000"
        android:textStyle="bold"
        tools:ignore="LabelFor" />

    <Switch
        android:id="@+id/risk3"
        android:layout_width="262dp"
        android:layout_height="59dp"
        android:layout_below="@+id/TripDate3"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:autofillHints=""
        android:ems="10"
        android:text="Requires Risk Assessment :"
        android:textColor="#A3000000"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:ignore="LabelFor,UseSwitchCompatOrMaterialXml"
        />

    <EditText
        android:id="@+id/Description3"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/risk3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Description"
        android:textColor="#A3000000"
        android:textStyle="bold"
        android:autofillHints=""
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/TripDate3"
        style="?android:spinnerStyle"
        android:layout_width="239dp"
        android:layout_height="58dp"
        android:layout_below="@+id/Destination3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="15dp"
        android:text="dd_mm_yy"
        android:textColor="#A3000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/UpdatetripBtn3"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_below="@+id/Description3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="15dp"
        android:text="Update Trip"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tripid3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#00020202"/>

</RelativeLayout>